<!doctype html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.21.9/dist/css/uikit.min.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="icon" type="image/x-icon" href="/assets/favicon.png" />
  <script defer src="https://cdn.jsdelivr.net/npm/uikit@3.21.9/dist/js/uikit.min.js"></script>
  <script src="https://unpkg.com/pristinejs/dist/pristine.min.js"></script>
  <script type="module" defer src="/js/patients.js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <title>Editar Paciente</title>
</head>

<body>
  <div class="container">
    <!-- NAVBAR -->
    <%-include('./partials/navbar.ejs', {user: user}); %>
    <main class="uk-margin-auto uk-margin-bottom uk-margin-top uk-padding-small bg-white main">

      <ul class="uk-breadcrumb">
        <li><a href="/panel">Panel</a></li>
        <li><a href="/panel/pacientes">Pacientes</a></li>
        <li><span>Editar</span></li>
      </ul>

      <h1 class="uk-text-lead uk-text-center">EDITAR PACIENTE</h1>

      <form id="form" method="POST" action="/panel/pacientes">
        <input type="hidden" name="_method" value="PUT">
        <fieldset class="uk-fieldset">
          <div class="form-group uk-margin-small">
            <label for="patientDocument" class="uk-form-label" style="display: block !important;">Documento:</label>
            <input value="<%- patient.patientDocument %>" class="uk-input" type="number" placeholder="35125742" name="patientDocument" id="patientDocument" readonly>
          </div>
          <div class="form-group uk-margin-small">
            <label for="lastname" class="uk-form-label" style="display: block !important;">Apellido:</label>
            <input value="<%- patient.lastname %>" class="uk-input" type="text" placeholder="PÃ©rez" name="lastname" id="lastname" autofocus>
          </div>
          <div class="form-group uk-margin-small">
            <label for="name" class="uk-form-label" style="display: block !important;">Nombre:</label>
            <input value="<%- patient.name %>" class="uk-input" type="text" placeholder="Juan" name="name" id="name">
          </div>
          <div class="uk-margin-small">
            <label for="gender" class="uk-form-label" style="display: block !important;">Estado:</label>
            <div id="statusContainer" class="uk-flex uk-flex-middle uk-flex-center">
              <select class="uk-select small-select" name="gender" id="gender">
                <option value="MALE" <%= patient.gender === 'MALE' ? 'selected' : '' %>>Masculino</option>
                <option value="FEMALE" <%= patient.gender === 'FEMALE' ? 'selected' : '' %>="false">Femenino</option>
              </select>
            </div>
          </div>
          <div class="form-group uk-margin-small">
            <label for="birthDate" class="uk-form-label" style="display: block !important;">Fecha de Nacimiento:</label>
            <input value="<%- patient.birthDate %>" class="uk-input" type="date" placeholder="" name="birthDate" id="birthDate">
          </div>
          <div class="form-group uk-margin-small">
            <label for="socialSecurity" class="uk-form-label" style="display: block !important;">Obra Social:</label>
            <input value="<%- patient.socialSecurity %>" class="uk-input" type="text" placeholder="Medicus" name="socialSecurity" id="socialSecurity">
          </div>
        </fieldset>
        <div class="uk-flex uk-flex-right">
          <button type="submit" class="uk-button uk-button-primary">Editar</button>
        </div>
      </form>
    </main>
    <!-- FOOTER -->
    <%-include('./partials/footer.ejs'); %>

  </div>

  <script>
    let patient = '<%- JSON.stringify(patient) %>';
    let success = '<%- JSON.stringify(success) %>';
    let error = '<%- JSON.stringify(error) %>';
    let message = '<%- JSON.stringify(message) %>';
  </script>
</body>

</html>