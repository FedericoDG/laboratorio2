  <title>Editar Administrador</title>
</head>

<body>
  <div class="container">
    <!-- NAVBAR -->
    <%-include('./partials/navbar.ejs', {user: user}); %>
    <main class="uk-margin-auto uk-margin-bottom uk-margin-top uk-padding-small bg-white main">
      <ul class="uk-breadcrumb">
        <li><a href="/panel">Panel</a></li>
        <li><a href="/panel/usuarios">Administradores</a></li>
        <li><span>Editar</span></li>
      </ul>

      <h1 class="uk-text-lead uk-text-center">EDITAR ADMINISTRADOR</h1>

      <form id="form" method="POST" action="/panel/usuarios">
        <input type="hidden" name="_method" value="PUT">
        <fieldset class="uk-fieldset">
          <legend class="uk-legend uk-text-default uk-text-bold">Datos Personales</legend>
          <div class="form-group uk-margin-small">
            <label for="userDocument" class="uk-form-label" style="display: block !important;">Documento:</label>
            <input value="<%- userToUpdate.userDocument%>" class="uk-input" type="text" placeholder="28126367" name="userDocument" id="userDocument" readonly>
          </div>
          <div class="form-group uk-margin-small">
            <label for="lastname" class="uk-form-label" style="display: block !important;">Apellido:</label>
            <input value="<%- userToUpdate.lastname%>" class="uk-input" type="text" placeholder="Pérez" name="lastname" id="lastname" autofocus>
          </div>
          <div class="form-group uk-margin-small">
            <label for="name" class="uk-form-label" style="display: block !important;">Nombre:</label>
            <input value="<%- userToUpdate.name%>" class="uk-input" type="text" placeholder="Juan" name="name" id="name">
          </div>
          <div class="form-group uk-margin-small">
            <label for="password" class="uk-form-label" style="display: block !important;">Contraseña:</label>
            <input class="uk-input" type="password" name="password" id="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;" id="password">
          </div>
        </fieldset>
        <div class="uk-flex uk-flex-right">
          <button type="submit" class="uk-button uk-button-primary">Editar</button>
        </div>
      </form>
    </main>
    <!-- FOOTER -->
    <%-include('./partials/footer.ejs'); %>

  </div>

  <script>
    const isCreateScreen = false
  </script>

  <script>
    let success = '<%- JSON.stringify(success) %>';
    let error = '<%- JSON.stringify(error) %>';
    let message = '<%- JSON.stringify(message) %>';
  </script>
</body>

</html>